doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        title="Nightlife"
        link(rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")
        link(rel="stylesheet" type="text/css" href="/public/css/main.sass")
        script(src="https://code.jquery.com/jquery-3.2.1.min.js"
               integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
               crossorigin="anonymous")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js")
        script(src="/public/js/main.js")
        block head
    body
        nav.navbar.navbar-inverse.navbar-fixed-top
            .container-fluid
                .navbar-header
                    button.navbar-toggle.collapsed(data-toggle="collapse" data-target="#collapse")
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href="/") Nightlife
                .collapse.navbar-collapse.nav-main#collapse
                    ul.nav.navbar-nav.navbar-right
                        if user
                            li #[p.navbar-text Welcome #{user.twitter.displayName}!]
                            li #[a(href="/logout") Log out]
                        else
                            li #[a(href="/login") Login with Twitter]
        .container
            if successMessages
                each m in successMessages
                    div.alert.alert-success.alert-dismissible
                        button.close(data-dismiss="alert") #[span(aria-hidden=true) &times]
                        p= m
            if errorMessages
                each m in errorMessages
                    div.alert.alert-danger.alert-dismissible
                        button.close(data-dismiss="alert") #[span(aria-hidden=true) &times]
                        p= m
            block content
        footer.navbar-inverse.navbar-fixed-bottom.navbar.text-center
            p Nightlife App by Cole Trammer using the Yelp Api<br>
            a(target="_blank" href="https://github.com/ColeTrammer/nightlife") GitHub
